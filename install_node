#!/usr/bin/env zsh
# executing with zsh to have to `source`

# installing NVM, the awesome NodeJs verion manager https://github.com/nvm-sh/nvm
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.37.2/install.sh | bash
source ~/.nvm/nvm.sh

nvm install 14
npm install -g --production lev2 couchdb-bulk2 add-to-systemd
